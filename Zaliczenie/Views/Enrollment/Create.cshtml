@model Zaliczenie.Models.EnrollmentViewModel

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1 class="text-2xl font-bold mb-4">Create Enrollment</h1>

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="CourseID" class="block font-medium mb-1"></label>
                <input asp-for="CourseID" class="input input-bordered w-full" type="number" />
                <span asp-validation-for="CourseID" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="StudentID" class="block font-medium mb-1"></label>
                <input asp-for="StudentID" class="input input-bordered w-full" type="number" />
                <span asp-validation-for="StudentID" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Grade" class="block font-medium mb-1"></label>
                <select asp-for="Grade" class="input input-bordered w-full">
                    <option value="">-- Select Grade --</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="F">F</option>
                </select>
                <span asp-validation-for="Grade" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <input type="submit" value="Create" class="btn btn-primary w-full" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
</div>
