@model Zaliczenie.Models.InstructorViewModel

@{
    ViewData["Title"] = "Edit Instructor";
}

<h1 class="text-2xl font-bold mb-4">Edit Instructor</h1>

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <div class="mb-4">
                <label asp-for="Name" class="block font-medium mb-1"></label>
                <input asp-for="Name" class="input input-bordered w-full" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="AcademicTitle" class="block font-medium mb-1"></label>
                <input asp-for="AcademicTitle" class="input input-bordered w-full" />
                <span asp-validation-for="AcademicTitle" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <input type="submit" value="Save Changes" class="btn btn-primary w-full" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
</div>
