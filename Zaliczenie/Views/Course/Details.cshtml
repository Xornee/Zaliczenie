@model Zaliczenie.Models.CourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<div class="card w-full max-w-md bg-base-100 shadow-xl mx-auto mt-8">
    <div class="card-body">
        <h2 class="card-title text-2xl font-bold mb-4">Course Details</h2>

        <div class="mb-2">
            <span class="font-semibold">Title:</span>
            <span>@Model.Title</span>
        </div>
        <div class="mb-2">
            <span class="font-semibold">Credits:</span>
            <span>@Model.Credits</span>
        </div>
        <div class="mb-2">
            <span class="font-semibold">Instructor Id:</span>
            <span>@Model.InstructorId</span>
        </div>

        <div class="card-actions justify-end mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
