@model IEnumerable<Zaliczenie.Models.StudentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-2xl font-bold mb-4">Index</h1>

<!-- Search Bar -->
<form asp-action="Search" method="get" class="mb-6 flex items-center space-x-2">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <div class="flex-grow">
        <input type="text" name="query" placeholder="Search students..." class="input input-bordered w-full" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="overflow-x-auto">
    <table class="table w-full">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.IndexNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Birth)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.IndexNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Birth)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "link link-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "link link-secondary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "link link-error" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
