@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="card bg-base-200 shadow-md max-w-md mx-auto my-8">
    <div class="card-body">
        <h3 class="card-title text-center">@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>

            <div class="form-control mb-4">
                <label asp-for="Username" class="label">
                    <span class="label-text">Username</span>
                </label>
                <input asp-for="Username" class="input input-bordered w-full" placeholder="Please choose your username." disabled />
            </div>

            <div class="form-control mb-4">
                <label asp-for="Input.PhoneNumber" class="label">
                    <span class="label-text">Phone Number</span>
                </label>
                <input asp-for="Input.PhoneNumber" class="input input-bordered w-full" placeholder="Please enter your phone number." />
                <span asp-validation-for="Input.PhoneNumber" class="text-red-500 text-sm"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary w-full">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
