@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card bg-base-200 shadow-md max-w-md mx-auto my-8">
    <div class="card-body">
        <h3 class="card-title text-center">@ViewData["Title"]</h3>
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="font-bold">
            Deleting this data will permanently remove your account, and this cannot be recovered.
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary w-full" type="submit">Download</button>
        </form>
        <div class="mt-4">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-error w-full">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
