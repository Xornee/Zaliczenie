@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="card bg-base-200 shadow-md max-w-md mx-auto my-8">
    <div class="card-body">
        <h3 class="card-title text-center">@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>
            <div class="form-control mb-4">
                <label asp-for="Input.OldPassword" class="label">
                    <span class="label-text">Old Password</span>
                </label>
                <input asp-for="Input.OldPassword" class="input input-bordered w-full" autocomplete="current-password" placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm"></span>
            </div>
            <div class="form-control mb-4">
                <label asp-for="Input.NewPassword" class="label">
                    <span class="label-text">New Password</span>
                </label>
                <input asp-for="Input.NewPassword" class="input input-bordered w-full" autocomplete="new-password" placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm"></span>
            </div>
            <div class="form-control mb-4">
                <label asp-for="Input.ConfirmPassword" class="label">
                    <span class="label-text">Confirm New Password</span>
                </label>
                <input asp-for="Input.ConfirmPassword" class="input input-bordered w-full" autocomplete="new-password" placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>
            <button type="submit" class="btn btn-primary w-full">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
